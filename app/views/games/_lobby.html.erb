<h1>Listing Games</h1>

<button type="button" name="button" ng-click="CreateGame()" class="btn">Create game</button>

<table>
  <thead>
    <tr>
      <th colspan="3">Game id</th>
      <th colspan="3">Number of players</th>
      <th colspan="3">Admin</th>
    </tr>
  </thead>

  <tbody>
      <tr ng-repeat="game in Games track by $index">
        <td colspan="3">{{game.id}}</td>
        <td colspan="3">{{game.users.length}}</td>
        <td colspan="3">{{FindAdminName(game.users)}}</td>
        <td colspan="3"><button ng-click="JoinGame('/games/'+game.id+'.json')" class="btn">Join Game</button></td>
      </tr>
  </tbody>
</table>
