<h1>Listing Games</h1>

<button type="button" name="button" ng-click="CreateGame()">Create game</button>

<table>
  <thead>
    <tr>
      <th colspan="3">Game id</th>
      <th colspan="3">Number of players</th>
      <th colspan="3">Founder</th>
    </tr>
  </thead>

  <tbody>
      <tr ng-repeat="game in Games track by $index">
        <td colspan="3">{{game.id}}</td>
        <td colspan="3">{{game.users.length}}</td>
        <td colspan="3">{{game.users[0].email}}</td>
      </tr>
  </tbody>
</table>
