<h1>GAME</h1>

<div class="col-sm-6">
  <button type="button" name="button" ng-click="LeaveGame()" class="btn">Leave game</button>
</div>
<div class="col-sm-6" class="will">
  <div ng-click="ChangeWill()" class="willButton" ng-class="{willYes : UserWill, willNo : !UserWill}"></div> <p class="willText">Eager to play</p>
</div>

<div class="admin col-sm-6" ng-show="youAdmin()">
  <%= render "gameAdmin" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3">Game id</th>
      <th colspan="3">Number of players</th>
      <th colspan="3">Admin</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td colspan="3">{{Games.id}}</td>
        <td colspan="3">{{Games.users.length}}</td>
        <td colspan="3">{{FindAdminName(Games.users)}}</td>
      </tr>
  </tbody>
</table>

<div class="col-lg-4 col-sm-6">
  <h1>Team 1</h1>
  <table class="team1 table" ng-repeat="user in Team1">
    <tr><td><img class="panelAvatar" ng-src="{{user.avatar.url}}">{{user.name}}</td><td><div class="willUsers" ng-class="{willYes : user.will, willNo : !user.will}"></div></td></tr>
  </table>
</div>

<div class="col-lg-4 col-sm-6">
  <h1>Team 2</h1>
  <table class="team2 table col-lg-4 col-md-6" ng-repeat="user in Team2">
    <tr><td><img class="panelAvatar" ng-src="{{user.avatar.url}}">{{user.name}}</td><td><div class="willUsers" ng-class="{willYes : user.will, willNo : !user.will}"></div></td></tr>
  </table>
</div>

<div class="col-lg-4">
  <h1>Waiting list</h1>
  <table class="users table" ng-repeat="user in Games.users | orderBy:'last_played':true">
    <tr ng-if="user.team_id === null"><td><img class="panelAvatar" ng-src="{{user.avatar.url}}">{{user.name}}</td><td><div class="willUsers" ng-class="{willYes : user.will, willNo : !user.will}"></div></td></tr>
  </table>
</div>
